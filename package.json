{
  "name": "form-request-validation",
  "description": "A simple and flexible form validation library that allows you to send any request and validate it against customizable field options. Easily define validation rules, patterns, and error handling for various forms and fields.",
  "private": false,
  "version": "1.0.6",
  "type": "commonjs",
  "keywords": [
    "form validation",
    "validation library",
    "input validation",
    "field validation",
    "dynamic validation",
    "flexible validation",
    "custom validation",
    "object validation",
    "request validation",
    "typescript validation",
    "javascript validation",
    "validation rules",
    "pattern validation",
    "form field validation",
    "regex validation",
    "form validation toolkit",
    "data validation",
    "server-side validation",
    "client-side validation",
    "validation framework"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.mjs"
      },
      "worker": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build:vite": "vite build",
    "build": "rimraf ./dist && npm run build:vite",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:typecheck && npm run test:jest",
    "test:jest": "jest ./lib --coverage --testPathIgnorePatterns --runInBand",
    "jest": "jest --clearCache"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.11.2",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.1.0"
  },
  "browser": {
    "process": "./node_modules/process/browser.js"
  }
}
